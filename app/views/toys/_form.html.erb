
<%= simple_form_for(@toy, html: {class:'form-signin'}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


    <%= f.input :name, required: true, label: false, placeholder: "Name"%>
    <%= f.input :description, required: true, label: false, placeholder: " Toy Description" %>
    <%= f.input :price, required: true, label: false, placeholder: "Price" %>
    <%= f.input :availability %>
    <%= f.input :condition, required: true, label: false, placeholder: "Condition" %>
    <%= f.input :category, required: true, label: false, placeholder: "Category" %>


 
    <%= f.button :submit, class: "btn btn-warning btn-block" %>

<% end %>
